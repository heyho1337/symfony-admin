        {% block extraHeadTabs %}
            <li class="z-30 flex-auto text-center">
                <a class="z-30 flex items-center justify-center w-full px-0 py-1 mb-0 transition-all ease-in-out border-0 rounded-lg cursor-pointer text-slate-700 bg-inherit"
                   href="#"
                   data-action="click->tabs#selectTab"
                   data-tab-target="images"
                   data-tabs-target="tabLink">
						<span class="ml-1 z-30 mb-0 flex w-full cursor-pointer items-center justify-center rounded-lg border-0 px-0 py-1 transition-all ease-in-out active:bg-white text-slate-700">
