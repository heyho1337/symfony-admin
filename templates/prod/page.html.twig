{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
	<section class="page prodPage" data-controller="tabs">
		<h1>Product page</h1>
		{% set slug = product.slug %}
		{% set type = 'prod' %}
		{% set translations = product.productTranslations %}

		{% embed 'modules/tabs_head_module.html.twig' %}
			{% block extraTabs %}
				<li class="z-30 flex-auto text-center">
					<a class="z-30 flex items-center justify-center w-full px-0 py-1 mb-0 transition-all ease-in-out border-0 rounded-lg cursor-pointer text-slate-700 bg-inherit"
						href="#"
						data-action="click->tabs#selectTab"
						data-tab-target="images"
						data-tabs-target="tabLink">
						<span class="ml-1 z-30 mb-0 flex w-full cursor-pointer items-center justify-center rounded-lg border-0 px-0 py-1 transition-all ease-in-out active:bg-white text-slate-700">
							Images
						</span>
					</a>
				</li>
			{% endblock %}
		{% endembed %}
		<div class="p-5">
			<div data-tabs-target="tabContent" active id="basics" class="hidden opacity-0 active:block active:opacity-100">
				<form method="post" class="form grid gap-y-4 w-full max-w-[95svw] mx-auto" action="{{ path('app_' ~ type ~ '_set', {slug: slug}) }}">
					{{ form_widget(form) }}
				</form>
			</div>
			<div data-tabs-target="tabContent" id="images" class="hidden opacity-0 active:block active:opacity-100">
				<form method="post" class="form grid gap-y-4 w-full max-w-[95svw] mx-auto" action="{{ path('app_' ~ type ~ '_set', {slug: slug}) }}">
					product images
				</form>
			</div>
			{% include 'modules/tabs_content_module.html.twig' %}
		</div>
	</section>
{% endblock %}
